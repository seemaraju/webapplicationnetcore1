@model IEnumerable<WebApplication2.Models.Login>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PO Attribute Update Tool Application</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    @*<link href="~/css/Common.css" rel="stylesheet" />*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/css/Common.css")
    @Scripts.Render("~/Scripts/angular.min.js")
    @Scripts.Render("~/Content/xlsx-model.js")
</head>
<body>
    @{


        var Username = "";
        if (TempData.Peek("Model") != null)
        {

            foreach (var item in TempData.Peek("Model") as IEnumerable<WebApplication2.Models.Login>)
            {
                Username = item.FirstName;
                break;
            }
        }
    }
    @*bg-light*@

    <div class="container-fluid h-100">
        <div class="row">
            <div class="row" style="height:60px;background-color:steelblue">
                <table style="width:100%">
                    <tr>
                        <td style="width:90%">
                            <h3 class="maintitle">PO ATTRIBUTE UPDATE TOOL</h3>
                        </td>
                        <td>
                            <h5 class="usernametitle">Welcome @Username</h5>
                        </td>
                    </tr>
                </table>
                
                
            </div>
            <div class="col-2 col-sd-2 width m-0 p-0 collapse show verticalmenudiv" id="collapseExample">

                @if (TempData.Peek("Model") != null)
                {
                    foreach (var item in TempData.Peek("Model") as IEnumerable<WebApplication2.Models.Login>)
                    {

                        <ul id="nav" class="nav flex-column navbar-dark sticky-top">
                            @if (item.Department == "7020")
                            {

                                <li class="nav-item">

                                    <a data-toggle="collapse" href="#POBulkUpdate" role="button" aria-controls="POBulkUpdate" class="nav-link mainmenutitle" aria-haspopup="true" aria-expanded="false">Logistics </a>
                                    <ul class="collapse multi-collapse" id="POBulkUpdate">
                                        <li>
                                            <a class="nav-link active submenutitle" href='@Url.Action("POBulkUpdate", "POBulkUpdate")'>PO Attribute Bulk Update</a>
                                        </li>
                                        <li>
                                            <a class="nav-link active submenutitle" href='@Url.Action("Audit", "Audit")'>Audit</a>
                                        </li>

                                    </ul>

                                </li>

                                @*class= "nav ul hover"*@
                                <li class="nav-item">
                                    <a data-toggle="collapse" href="#securitygroup" role="button" aria-controls="securitygroup" aria-haspopup="true" aria-expanded="false" class="nav-link mainmenutitle">Security</a>
                                    <ul id="securitygroup" class="collapse multi-collapse">
                                        <li>
                                            <a class="nav-link active submenutitle" href='@Url.Action("SecurityGroup", "SecurityGroup")'>Security Group</a>
                                        </li>
                                    </ul>
                                </li>
                                break;
                            }
                            @if (item.Department == "3221")
                            {
                                <li class="nav-item">

                                    <a href="#" class="nav ul hover" role="button" aria-haspopup="true" aria-expanded="false">Accounts </a>
                                    <ul class="sub-menu">
                                        <li>
                                            <a class="nav-link active" href='' style="color: black">Accounts Menu1</a>
                                        </li>
                                        <li>
                                            <a class="nav-link active" href='' style="color: black">Accounts menu2</a>
                                        </li>

                                    </ul>

                                </li>
                                break;
                            }
                            @if (item.Department == "4592")
                            {
                                <li class="nav-item">

                                    <a href="#" class="nav ul hover" role="button" aria-haspopup="true" aria-expanded="false">Planning </a>
                                    <ul class="sub-menu">
                                        <li>
                                            <a class="nav-link active" href='' style="color: black">Planning Menu1</a>
                                        </li>
                                        <li>
                                            <a class="nav-link active" href='' style="color: black">Planning Menu2</a>
                                        </li>

                                    </ul>

                                </li>
                                break;
                            }
                            @if (!string.IsNullOrEmpty(Session["UserName"].ToString()))
                            {
                                <li class="nav-item">
                                    <a href="#" class="nav ul hover" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Logout" asp-controller="Home">Logout</a>
                                </li>
                            }



                        </ul>
                    }

                }
                else
                {

                    <ul id="nav" class="nav flex-column navbar-dark sticky-top">


                        <li class="nav-item">

                            <a href="#" class="nav ul hover" role="button" aria-haspopup="true" aria-expanded="false">Logistics</a>
                            <ul class="sub-menu">
                                <li>
                                    <a class="nav-link active" href='@Url.Action("POBulkUpdate", "POBulkUpdate")' style="color: black">PO Attribute Bulk Update</a>
                                </li>
                                <li>
                                    <a class="nav-link active" href='@Url.Action("Audit", "Audit")' style="color: black">Audit</a>
                                </li>

                            </ul>

                        </li>

                        <li class="nav-item">

                            <a href="#" class="nav ul hover" role="button" aria-haspopup="true" aria-expanded="false">Accounts</a>
                            <ul class="sub-menu">
                                <li>
                                    <a class="nav-link active" href='' style="color: black">Accounts Menu1</a>
                                </li>
                                <li>
                                    <a class="nav-link active" href='' style="color: black">Accounts menu2</a>
                                </li>

                            </ul>
                        </li>
                        <li class="nav-item">

                            <a href="#" class="nav ul hover" role="button" aria-haspopup="true" aria-expanded="false">Planning</a>
                            <ul class="sub-menu">
                                <li>
                                    <a class="nav-link active" href='' style="color: black">Planning Menu1</a>
                                </li>
                                <li>
                                    <a class="nav-link active" href='' style="color: black">Planning Menu2</a>
                                </li>

                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" style="color:black">Security</a>
                            <ul>
                                <li>
                                    <a class="nav-link active" href='@Url.Action("SecurityGroup", "SecurityGroup")' style="color: black">Security Group</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }

            </div>
            <div class="col">
                <button class="btn sticky-top" data-toggle="collapse" href="#collapseExample" id="" role="button" style="padding-left: 5px;">
                    <img src="~/css/Images/button.jpg" />
                </button>
                <div class="row">

                    <div class="col-12">
                        <div class="container body-content">
                            @RenderBody()


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>

</body>
</html>
